<?xml version="1.0" encoding="UTF-8"?>
<configuration>
  <system.webServer>
    <!-- เปิด WebSocket สำหรับ Streamlit -->
    <webSocket enabled="true" />

    <!-- เปิด Proxy Mode -->
    <proxy enabled="true" />

    <!-- Rewrite Rule สำหรับ Reverse Proxy -->
    <rewrite>
      <rules>
        <rule name="ReverseProxyToStreamlit" stopProcessing="true">
          <match url="(.*)" />
          <action type="Rewrite" url="http://localhost:8503/streamlit/{R:1}" />
          <serverVariables>
            <set name="HTTP_ACCEPT_ENCODING" value="" />
          </serverVariables>
        </rule>
      </rules>
    </rewrite>

    <!-- ปิด cache ของ static file -->
    <staticContent>
      <clientCache cacheControlMode="DisableCache" />
    </staticContent>
  </system.webServer>
</configuration>
